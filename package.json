{
  "name": "qa-automation-challenge",
  "version": "1.0.0",
  "description": "QA Automation Engineer Challenge - Inventory Management System",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:functional": "playwright test --grep-invert '.visual.spec.ts'",
    "test:visual": "playwright test --grep '.visual.spec.ts'",
    "test:visual:update": "playwright test --grep '.visual.spec.ts' --update-snapshots",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "date-fns": "^3.6.0",
    "js-cookie": "^3.0.5",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.42.0",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.37.0",
    "eslint-plugin-playwright": "^2.2.2",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.46.0"
  }
}
